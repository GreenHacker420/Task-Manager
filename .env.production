# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Connection
# Replace with your MongoDB Atlas connection string or Railway MongoDB plugin URL
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/task-manager?retryWrites=true&w=majority

# JWT Configuration
# Use a strong random string for JWT_SECRET in production
JWT_SECRET=your_production_jwt_secret_key
JWT_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Frontend URL (for CORS)
# This should be your Railway app URL or custom domain
FRONTEND_URL=https://your-app-name.railway.app

# API URL for frontend
VITE_API_URL=https://your-app-name.railway.app/api

# Server Configuration for Railway
PORT=5001
NODE_ENV=production

# MongoDB Connection (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://your_mongodb_atlas_username:your_mongodb_atlas_password@your_cluster.mongodb.net/task-manager?retryWrites=true&w=majority

# JWT Configuration (use a strong, unique secret in production)
JWT_SECRET=your_strong_production_jwt_secret_key
JWT_EXPIRATION=7d

# Google OAuth (if using Google login)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Frontend URL (for CORS) - Update this with your Netlify URL once deployed
FRONTEND_URL=https://your-netlify-app.netlify.app

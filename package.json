{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Full-stack task management application",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "start": "cd server && npm start",
    "start:all": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "start:server": "cd server && npm start",
    "start:frontend": "cd frontend && npm run start",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build && cd ../server && npm install",
    "lint": "cd frontend && npm run lint",
    "clean": "rimraf node_modules && cd server && rimraf node_modules && cd ../frontend && rimraf node_modules dist"
  },
  "keywords": [
    "task-manager",
    "react",
    "node",
    "express",
    "mongodb",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=16.20.1"
  }
}
